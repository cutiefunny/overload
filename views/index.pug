        #div_setMission.hidden2 
            P
            select#ib_setMove
                if mission.move==="Squat"
                    option(selected) Squat
                else
                    option Squat
                if mission.move==="Benchpress"
                    option(selected) Benchpress
                else
                    option Benchpress
                if mission.move==="Deadlift"
                    option(selected) Deadlift
                else
                    option Deadlift
