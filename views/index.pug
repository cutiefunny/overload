                P
                span#span_name.hidden2
                p
            #div_inputRecord(style="display:none; text-align:right")
                table(style="padding:0px;border:0px")
                    tr
                        td Squat
                        td    
                            input(type="number" id="ib_squat" style="width:50;text-align:right" onchange="changeTotal()" value="0")
                    tr
                        td Benchpress
                        td
                            input(type="number" id="ib_benchpress" style="width:50;text-align:right" onchange="changeTotal()" value="0")
                    tr
                        td Deadlift
                        td 
                            input(type="number" id="ib_deadlift" style="width:50;text-align:right" onchange="changeTotal()" value="0")
                    tr(style="font-weight:bold;text-align:center;background-color:lightgray;")
                        td Total
                        td 
                            span#span_total(style="font-weight:bold;")
                P 
                button(id="btn_save" onclick="save()" class="ui primary button") save
                P
        P
        #div_recommend.box(style="display:none;")
            H3 Mission of the day : 
            P.redColor 
                span#span_movement= mission.move
                font(color="black")=" : "
                span#span_weight(style="font-weight:bold;")
                font(color="black" size=2)="kg "
                span#span_reps(style="font-weight:bold;") 
                    =mission.reps
                font(color="black" size=2)="reps "
                span#span_set(style="font-weight:bold;") 
                    =mission.set
                font(color="black" size=2) set
            P 
            #div_mission.ui.buttons
                button#btn_complete.mini.ui.button(onclick="mission()") Complete
            #div_result.hidden2 
